
.mainSwipe {
	margin: 3%;
	width: 94%;
}
.book_main {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
	border-radius: 30rpx;
	height: 330rpx;
	background-color: rgba(255, 255, 255, 0.91);
}
.progress-box {
	width: 95%;
}
.wordsText {
	margin-top: 5rpx;
	color: gray;
	font-size: small;
	display: flex;
	width: 100%;
	justify-content: space-between;
}
.image {
	border-radius: 10rpx;
	height: 250rpx;
	width: 180rpx;
}
.book_box1 {
	align-items: baseline;
	justify-content: space-between;
	height: 250rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.book_box2 {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	width: 93%;
}

