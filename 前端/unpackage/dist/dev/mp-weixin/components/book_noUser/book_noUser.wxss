.book_main {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
	border-radius: 30rpx;
	margin-top: 2%;
	margin-left:3%;
	width: 94%;
	height: 280rpx;
	background-color: rgba(255, 255, 255, 0.9);
}
.progress {
	width: 85%;
}
.image {
	border-radius: 10rpx;
	height: 250rpx;
	width: 180rpx;
}
.book_box1 {
	align-items: baseline;
	justify-content: space-between;
	height: 250rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
.book_box2 {
	display: flex;
	justify-content: space-between;
	flex-direction: row;
	width: 93%;
}

